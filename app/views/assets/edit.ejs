<div class="row">
  <div class="col-md-8 offset-md-2">
    <h2>Edit Asset</h2>
    <form action="/assets/edit/<%= asset._id %>" method="POST">
      <div class="form-group">
        <label for="employee">Employee</label>
        <select class="form-control" id="employee" name="employee" required>
          <% employees.forEach(employee => { %>
            <option value="<%= employee._id %>" 
              <%= asset.employee._id.toString() === employee._id.toString() ? 'selected' : '' %>>
              <%= employee.name %> (Room: <%= employee.roomNumber %>)
            </option>
          <% }) %>
        </select>
      </div>
      
      <div class="form-group">
        <label for="itemName">Item Name</label>
        <input
          type="text"
          class="form-control"
          id="itemName"
          name="itemName"
          value="<%= asset.itemName %>"
          required
        />
      </div>
      
      <div class="form-group">
        <label for="issueDate">Issue Date</label>
        <% const date = new Date(asset.issueDate); %>
        <% const formattedDate = date.toISOString().split('T')[0]; %>
        <input
          type="date"
          class="form-control"
          id="issueDate"
          name="issueDate"
          value="<%= formattedDate %>"
        />
      </div>
      
      <button type="submit" class="btn btn-primary">Update Asset</button>
      <a href="/assets" class="btn btn-secondary">Cancel</a>
    </form>
  </div>
</div> 