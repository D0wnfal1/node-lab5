<div class="row">
  <div class="col-md-12">
    <h2>Asset Details</h2>
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Asset Information</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <p><strong>Item Name:</strong> <%= asset.itemName %></p>
          </div>
          <div class="col-md-6">
            <p>
              <strong>Issue Date:</strong> <%= new
              Date(asset.issueDate).toLocaleDateString() %>
            </p>
          </div>
        </div>

        <div class="row mt-3">
          <div class="col-md-12">
            <h6>Assigned To</h6>
            <div class="card bg-light">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6">
                    <p><strong>Employee:</strong> <%= asset.employee.name %></p>
                  </div>
                  <div class="col-md-6">
                    <p>
                      <strong>Room Number:</strong> <%=
                      asset.employee.roomNumber %>
                    </p>
                  </div>
                </div>
                <div>
                  <a
                    href="/employees/view/<%= asset.employee._id %>"
                    class="btn btn-sm btn-info"
                    >View Employee</a
                  >
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row mt-2">
          <div class="col-md-12">
            <p><strong>Asset ID:</strong> <%= asset._id %></p>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <a href="/assets/edit/<%= asset._id %>" class="btn btn-primary">Edit</a>
        <a href="/assets" class="btn btn-secondary">Back to List</a>
        <a
          href="/assets/api/<%= asset._id %>"
          class="btn btn-info"
          target="_blank"
          >View as JSON</a
        >
        <a
          href="/assets/delete/<%= asset._id %>"
          class="btn btn-danger"
          onclick="return confirm('Are you sure you want to delete this asset?')"
          >Delete</a
        >
      </div>
    </div>
  </div>
</div>
