<div class="row">
  <div class="col-md-12">
    <h2>Employee Details</h2>
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Employee Information</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <p><strong>Name:</strong> <%= employee.name %></p>
          </div>
          <div class="col-md-6">
            <p><strong>Room Number:</strong> <%= employee.roomNumber %></p>
          </div>
        </div>

        <div class="row mt-2">
          <div class="col-md-6">
            <p><strong>ID:</strong> <%= employee._id %></p>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <a href="/employees/edit/<%= employee._id %>" class="btn btn-primary"
          >Edit</a
        >
        <a href="/employees" class="btn btn-secondary">Back to List</a>
        <a
          href="/employees/api/<%= employee._id %>"
          class="btn btn-info"
          target="_blank"
          >View as JSON</a
        >
      </div>
    </div>

    <h3>Assigned Assets</h3>
    <% if(assets.length > 0) { %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Item Name</th>
            <th>Issue Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% assets.forEach(asset => { %>
          <tr>
            <td><%= asset.itemName %></td>
            <td><%= new Date(asset.issueDate).toLocaleDateString() %></td>
            <td>
              <a
                href="/assets/view/<%= asset._id %>"
                class="btn btn-sm btn-info"
                >View</a
              >
              <a
                href="/assets/edit/<%= asset._id %>"
                class="btn btn-sm btn-primary"
                >Edit</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } else { %>
    <div class="alert alert-info">No assets assigned to this employee.</div>
    <% } %>

    <div class="mt-3">
      <a href="/assets/add" class="btn btn-success">Assign New Asset</a>
    </div>
  </div>
</div>
